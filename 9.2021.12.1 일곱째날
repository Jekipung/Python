import random
win=0
a=["■","■","■","■","■","■","■","■","■"]
aa=["■","■","■","■","■","■","■","■","■"]
bb=[]
dd=[]
cc=0
for i in range(9):
    bb.append(random.randrange(1,3))
    if bb[i]==1:
        dd.append(2)
    elif bb[i]==2:
        dd.append(1)
die=0
alive=0
random=0
print("이번 게임은 징검다리 건너기 입니다.")
print("시작하시려면 아무키나 눌러주세요")
p=bool(input())
if p==True or p==False:
    print("┏━━━━━┳━━━━━┓")
    print("┃ ",a[8]," ┃ ",aa[8]," ┃")
    print("┃ ",a[7]," ┃ ",aa[7]," ┃")
    print("┃ ",a[6]," ┃ ",aa[6]," ┃")
    print("┃ ",a[5]," ┃ ",aa[5]," ┃")
    print("┃ ",a[4]," ┃ ",aa[4]," ┃")
    print("┃ ",a[3]," ┃ ",aa[3]," ┃")
    print("┃ ",a[2]," ┃ ",aa[2]," ┃")
    print("┃ ",a[1]," ┃ ",aa[1]," ┃")
    print("┃ ",a[0]," ┃ ",aa[0]," ┃")
    print("┗━━━━━┻━━━━━┛")
print("왼쪽과 오른쪽의 구분은 1,0 입니다.")
print("1이 왼쪽, 0이 오른쪽 입니다.")
while win < 1:
    print("왼쪽과 오른쪽중 길을 하나 선택해 주세요.")
    c=input()
    if c=="1" and bb[cc]==1:
        a[cc]="𓀝"
        cc += 1
    elif c=="1" and bb[cc]==2:
        a[cc]="□"
        die += 1
    elif c == "0" and dd[cc] == 1:
        aa[cc] = "𓀝"
        cc += 1
    elif c == "0" and dd[cc] == 2:
        aa[cc] = "□"
        die += 1
    else:
        print("왼쪽(1) 혹은 오른쪽(0)중 선택해 주세요.")
    for o in range(cc-1):
        if a[o]=="𓀝":
            a[o]="■"
        elif aa[o]=="𓀝":
            aa[o] ="■"
        if cc==9:
            win=win+1
    print("┏━━━━━┳━━━━━┓")
    print("┃ ",a[8]," ┃ ",aa[8]," ┃")
    print("┃ ",a[7]," ┃ ",aa[7]," ┃")
    print("┃ ",a[6]," ┃ ",aa[6]," ┃")
    print("┃ ",a[5]," ┃ ",aa[5]," ┃")
    print("┃ ",a[4]," ┃ ",aa[4]," ┃")
    print("┃ ",a[3]," ┃ ",aa[3]," ┃")
    print("┃ ",a[2]," ┃ ",aa[2]," ┃")
    print("┃ ",a[1]," ┃ ",aa[1]," ┃")
    print("┃ ",a[0]," ┃ ",aa[0]," ┃")
    print("┗━━━━━┻━━━━━┛")
print("축하드립니다.")
print("통과하셨군요.")
print("죽은 인원{}명.".format(die))
print("살아남으신 분들은 다음 게임장으로 이동해 주시기 바랍니다.")

함수를 통해 조금 줄인 코드.
import random
def game():
    print("┏━━━━━┳━━━━━┓")
    print("┃ ", a[8], " ┃ ", aa[8], " ┃")
    print("┃ ", a[7], " ┃ ", aa[7], " ┃")
    print("┃ ", a[6], " ┃ ", aa[6], " ┃")
    print("┃ ", a[5], " ┃ ", aa[5], " ┃")
    print("┃ ", a[4], " ┃ ", aa[4], " ┃")
    print("┃ ", a[3], " ┃ ", aa[3], " ┃")
    print("┃ ", a[2], " ┃ ", aa[2], " ┃")
    print("┃ ", a[1], " ┃ ", aa[1], " ┃")
    print("┃ ", a[0], " ┃ ", aa[0], " ┃")
    print("┗━━━━━┻━━━━━┛")
win=0
a=["■","■","■","■","■","■","■","■","■"]
aa=["■","■","■","■","■","■","■","■","■"]
bb=[]
dd=[]
cc=0
for i in range(9):
    bb.append(random.randrange(1,3))
    if bb[i]==1:
        dd.append(2)
    elif bb[i]==2:
        dd.append(1)
die=0
alive=0
random=0
print("이번 게임은 징검다리 건너기 입니다.")
print("시작하시려면 아무키나 눌러주세요")
p=bool(input())
if p==True or p==False:
    game()
print("왼쪽과 오른쪽의 구분은 1,0 입니다.")
print("1이 왼쪽, 0이 오른쪽 입니다.")
while win < 1:
    print("왼쪽과 오른쪽중 길을 하나 선택해 주세요.")
    c=input()
    if c=="1" and bb[cc]==1:
        a[cc]="𓀝"
        cc += 1
    elif c=="1" and bb[cc]==2:
        a[cc]="□"
        die += 1
    elif c == "0" and dd[cc] == 1:
        aa[cc] = "𓀝"
        cc += 1
    elif c == "0" and dd[cc] == 2:
        aa[cc] = "□"
        die += 1
    else:
        print("왼쪽(1) 혹은 오른쪽(0)중 선택해 주세요.")
    for o in range(cc-1):
        if a[o]=="𓀝":
            a[o]="■"
        elif aa[o]=="𓀝":
            aa[o] ="■"
        if cc==9:
            win=win+1
    game()
print("축하드립니다.")
print("통과하셨군요.")
print("죽은 인원{}명.".format(die))
print("살아남으신 분들은 다음 게임장으로 이동해 주시기 바랍니다.")
